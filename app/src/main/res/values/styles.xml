<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SubtitleStyle" parent="android:TextAppearance.Material.Small">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_margin_bottom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#0090F1</item>
    </style>
    <style name="SubcontentStyle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SubcontentStyle.Padding" parent="SubcontentStyle">
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="TitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="descriptionStyle">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SublayoutStyle">
        <item name="android:layout_marginTop">@dimen/sublayout_margin_top</item>
    </style>
    <style name="CustomTextViewStyleDay">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomTextViewStyleNight">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomBottomNavigationStyle"
        parent="Widget.MaterialComponents.BottomNavigationView.Colored">

    </style>
    <style name="CustomToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary" />
    <style name="CustomFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/FabThemeOverlay</item>
    </style>
    <style name="FabThemeOverlay">
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/secondary</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:backgroundTint">@color/chip_background</item>
        <item name="strokeColor">@color/secondary</item>
    </style>
</resources>