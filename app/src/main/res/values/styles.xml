<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SubtitleStyle" parent="android:TextAppearance.Material.Small">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_margin_bottom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TitleStyle" parent="android:TextAppearance.Material.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/subtitle_margin_bottom</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="H1Style" parent="TitleStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H1Style.day" parent="H1Style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H1Style.night" parent="H1Style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="H2Style" parent="TitleStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="H2Style.day" parent="H2Style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H2Style.night" parent="H2Style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="H3Style" parent="TitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="TextBodyStyle" parent="android:TextAppearance.Material.Small">
        <item name="android:textColorLink">@color/primary</item>
    </style>

    <style name="TextBody1Style" parent="TextBodyStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody1Style.day" parent="TextBody1Style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody1Style.night" parent="TextBody1Style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBody2Style" parent="TextBodyStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBody2Style.day" parent="TextBody2Style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody2Style.night" parent="TextBody2Style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomBottomNavigationStyle"
        parent="Widget.MaterialComponents.BottomNavigationView.Colored">
    </style>

    <style name="CustomToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary" />
    <style name="CustomFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/FabThemeOverlay</item>
    </style>
    <style name="FabThemeOverlay">
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipCornerRadius">10dp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:backgroundTint">@color/chip_background</item>
        <item name="strokeColor">@color/primary</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondary</item>
        <item name="iconTint">@color/secondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/accent</item>
        <item name="android:button">@drawable/sl_favourite_24dp</item>
    </style>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>