<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelsinkiTour" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/nunito</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationStyle</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="floatingActionButtonStyle">@style/CustomFabStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="materialButtonOutlinedStyle">@style/OutlinedButtonStyle</item>
        <item name="textAppearanceButton">@style/TextButtonStyle</item>
        <item name="textAppearanceHeadline1">@style/H1Style.day</item>
        <item name="textAppearanceHeadline2">@style/H2Style.day</item>
        <item name="textAppearanceHeadline3">@style/H3Style</item>
        <item name="textAppearanceBody1">@style/TextBody1Style.day</item>
        <item name="textAppearanceBody2">@style/TextBody2Style.day</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="listDividerAlertDialog">@style/dividerView</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>